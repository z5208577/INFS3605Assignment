<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context="com.example.INFS3605App.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settingsUserDp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:src="@drawable/ic_person_outline_black_24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:background="#00FFFFFF"
        android:text="User Details"
        android:textColor="#4C4C4C" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="Company Code:"
        android:textColor="#939FA3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:background="@drawable/textbox_background"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/settingsCompanyCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:text="TextView"
            android:textColor="#4C4C4C" />

        <ImageView
            android:id="@+id/copyCompId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".375"
            android:src="@drawable/ic_content_copy_black_24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="Name"
        android:textColor="#939FA3" />

    <TextView
        android:id="@+id/settingsUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:background="@drawable/textbox_background"
        android:text="TextView"
        android:textColor="#4C4C4C" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="Email"
        android:textColor="#939FA3" />

    <TextView
        android:id="@+id/settingsEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:background="@drawable/textbox_background"
        android:text="TextView"
        android:textColor="#4C4C4C" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="Join Date"
        android:textColor="#939FA3" />

    <TextView
        android:id="@+id/settingsJoinDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:background="@drawable/textbox_background"
        android:text="TextView"
        android:textColor="#4C4C4C" />

    <TextView
        android:id="@+id/settingsChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:background="@drawable/textbox_background"
        android:gravity="center_vertical"
        android:text="Change My Password"
        android:textColor="#4C4C4C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/cmclogo" />

    </LinearLayout>

</LinearLayout>
